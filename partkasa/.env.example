# API Gateway Configuration
API_GATEWAY_PORT=8000
API_GATEWAY_HOST=0.0.0.0
API_CORS_ORIGINS=http://localhost:3000

# Web Client Configuration
CLIENT_PORT=3000
REACT_APP_API_URL=http://localhost:8000/api
REACT_APP_SENTRY_DSN=

# Database Configurations
# PostgreSQL (Main Database)
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=partkasa
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres_password

# MongoDB (Optional)
MONGO_URI=mongodb://mongo:27017/partkasa

# Redis (Cache)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redis_password

# JWT Authentication
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRATION=86400

# Service Ports
USER_SERVICE_PORT=8001
VENDOR_SERVICE_PORT=8002
SEARCH_SERVICE_PORT=8003
ORDER_SERVICE_PORT=8004
PAYMENT_SERVICE_PORT=8005
DELIVERY_SERVICE_PORT=8006
NOTIFICATION_SERVICE_PORT=8007

# Third-Party API Keys
# Twilio (WhatsApp)
TWILIO_ACCOUNT_SID=your_sid
TWILIO_AUTH_TOKEN=your_token
TWILIO_WHATSAPP_NUMBER=whatsapp:+233XXXXXXX

# Telegram
TELEGRAM_BOT_TOKEN=your_bot_token

# Car API (NHTSA)
NHTSA_API_URL=https://vpic.nhtsa.dot.gov/api/

# Payment Processors
PAYSTACK_SECRET_KEY=your_paystack_secret_key
PAYSTACK_PUBLIC_KEY=your_paystack_public_key
MOMO_API_KEY=your_momo_api_key

# SMTP Email Configuration
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email
SMTP_PASS=your_password
SMTP_FROM=PartKasa <noreply@partkasa.com>

# Logging
LOG_LEVEL=info

# Docker Compose Configuration
COMPOSE_PROJECT_NAME=partkasa
